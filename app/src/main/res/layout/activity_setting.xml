<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height_61">


        <ImageView
            android:id="@+id/back_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:contentDescription="@string/back"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/settings_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/Seting"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_font_size" />

    </androidx.appcompat.widget.Toolbar>

    <Switch
        android:id="@+id/switch_darck"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height_61"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/ys_display_regular"
        android:letterSpacing="0.0892854173"
        android:paddingStart="@dimen/margin_16"
        android:text="@string/darc"
        android:textAllCaps="false"
        android:textSize="@dimen/regular_font_size"
        tools:ignore="RtlSymmetry,UseSwitchCompatOrMaterialXml" />

    <Button
        android:id="@+id/button_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height_61"
        android:backgroundTint="@color/white"
        android:drawableEnd="@android:drawable/ic_menu_share"
        android:drawableTint="@color/gray"
        android:fontFamily="@font/ys_display_regular"
        android:text="@string/share"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/regular_font_size" />

    <Button
        android:id="@+id/buttom_help"
        android:layout_width="match_parent"
        android:layout_height="@dimen/regular_font_size"
        android:backgroundTint="@color/white"
        android:drawableEnd="@drawable/ic_help"
        android:drawableTint="@color/gray"
        android:fontFamily="@font/ys_display_regular"
        android:text="@string/support"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/regular_font_size" />

    <Button
        android:id="@+id/buttom_agreement"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height_61"
        android:backgroundTint="@color/white"
        android:drawableEnd="@drawable/ic_arrow"
        android:drawableTint="@color/gray"
        android:fontFamily="@font/ys_display_regular"
        android:text="@string/agreement"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/regular_font_size" />

</LinearLayout>