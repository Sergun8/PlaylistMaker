<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/artwork_url_100"
        android:layout_width="@dimen/width_height_45"
        android:layout_height="@dimen/width_height_45"
        android:layout_marginVertical="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        android:contentDescription="@string/support"
        android:src="@drawable/ic_toast" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/track_name"
            style="@style/TextMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_14"
            android:layout_marginBottom="@dimen/margin_1"
            android:singleLine="true"
            tools:text="Smells Like Teen Spirit" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artist_name"
                style="@style/TextSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_weight="1"
                android:drawablePadding="@dimen/margin_5"
                android:ellipsize="end"
                android:maxLines="1"
                app:drawableEndCompat="@drawable/ic_ellipse"
                app:drawableTint="?attr/colorOnSecondary"
                tools:text="Nirvana" />

            <TextView
                android:id="@+id/track_time"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5:01" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_18"
        android:layout_marginBottom="@dimen/margin_19"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_arrow"
        app:tint="?attr/colorOnSecondary" />

</LinearLayout>