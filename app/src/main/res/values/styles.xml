<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextStyleToolbar" parent="TextAppearance.AppCompat.Light.SearchResult.Title">
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>


    <style name="ButtonMainActivity" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/margin_17</item>
        <item name="android:layout_marginEnd">@dimen/margin_15</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">@dimen/cornerRadius_10</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
    </style>




    <style name="TextSettings" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:layout_marginTop">@dimen/margin_21</item>
        <item name="android:layout_marginBottom">@dimen/margin_21</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/regular_font_size</item>
    </style>

    <style name="ImagesViewSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_12</item>
        <item name="android:layout_marginTop">@dimen/margin_19</item>
        <item name="android:layout_marginBottom">@dimen/margin_18</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="tint">?attr/colorOnSecondary</item>

    </style>

    <style name="TextMedium"> parent="Widget.AppCompat.TextView">
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/regular_font_size</item>
    </style>

    <style name="TextSmall"> parent="Widget.AppCompat.TextView">
            <item name="android:textFontWeight" tools:targetApi="p">400</item>
            <item name="android:textColor">?attr/colorOnSecondary</item>
            <item name="android:fontFamily">@font/ys_display_regular</item>
            <item name="android:textSize">11sp</item>
    </style>

    <style name="TextStyleError">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/error_font_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>


</resources>